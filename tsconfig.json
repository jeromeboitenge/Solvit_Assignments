{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",

    "rootDir": "./",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    // adding aliases
    "paths":{
      "@/*":["./src"]
    }
  },

  "include": [ "./src"],
  "exclude": ["node_modules"]
}